<% include ../partials/header.ejs %>

<div class='ui main text container segment'>
	<div class='ui huge header'>Edit <%=move.title%></div>
	<form class='ui form' action='/calisthenics/<%=move._id%>?_method=PUT' method='POST'>
		<div class='field'>
			<label>Title</label>
			<input type='text' name ='calisthenics[title]' value = '<%=move.title%>'>
		</div>
		<div class='field'>
			<label>Video</label>
			<input type='text' name ='calisthenics[video]' value = '<%=move.video%>'>
		</div>
		<div class='field'>
			<label>Content</label>
			<textarea name ='calisthenics[description]'><%=move.description%></textarea>
		</div>
		<input class='ui blue big basic button' type='submit'>
	</form>
</div>


